# ============================================================
# Odoo UBL Export - Configuration
# ============================================================
# Copy this file to .env and fill in your values
# ============================================================

# === ODOO CONNECTION ===
# Your Odoo Online URL (e.g., https://mycompany.odoo.com)
ODOO_URL=https://yourcompany.odoo.com

# Database name (usually same as your subdomain)
ODOO_DATABASE=yourcompany

# Your Odoo user email
ODOO_USERNAME=your.email@example.com

# API Key - generate this in Odoo:
# 1. Go to Settings → Users & Companies → Users
# 2. Click on your user
# 3. Go to Account Security tab
# 4. Click "New API Key"
# 5. Copy the key (it's only shown once!)
ODOO_API_KEY=your-api-key-here


# === DIRECTION FILTER ===
# Which documents to include:
#   both     = All invoices & bills (default)
#   outgoing = Customer invoices only
#   incoming = Vendor bills only
DIRECTION=both


# === DOCUMENT TYPE FILTER ===
# Which document types to include:
#   all     = Invoices & credit notes (default)
#   invoice = Invoices only
#   refund  = Credit notes only
DOCUMENT_TYPE=all


# === STATE FILTER ===
# Which document states to include:
#   posted               = Only posted/validated (default)
#   posted_draft_bills   = Posted + draft vendor bills
#   posted_draft_invoices = Posted + draft customer invoices
#   posted_draft         = Posted + all drafts
#   all                  = All states
STATE_FILTER=posted


# === CUSTOM DOMAIN FILTER ===
# Optional Odoo domain filter in JSON format
# Examples:
#   Only Belgian partners: [["partner_id.country_id.code", "=", "BE"]]
#   Amount > 1000: [["amount_total", ">", 1000]]
#   Specific partner: [["partner_id.name", "ilike", "ACME"]]
CUSTOM_DOMAIN=


# === EMAIL SETTINGS ===
# Emails are sent through Odoo's mail system (not AWS SES)
# Leave empty to disable email sending

# BilltoBox email for UBL files
UBL_EMAIL=

# Accountant email for bank statement PDFs
PDF_EMAIL=


# === QUARTERLY AUTO-SEND ===
# Day of month to send (1-28)
SEND_DAY=5

# Bank journal IDs for statement exports (comma-separated)
# Find these in Odoo: Accounting → Configuration → Journals → Bank accounts
BANK_JOURNAL_IDS=


# === OUTPUT ===
# S3 bucket for storing exports (leave empty for local testing)
S3_BUCKET=
